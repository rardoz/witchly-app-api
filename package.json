{
  "name": "witchly-app-api",
  "version": "1.0.0",
  "description": "Witchly App API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format --write",
    "format:check": "biome format",
    "check": "biome check",
    "check:fix": "biome check --write",
    "type-check": "tsc --noEmit",
    "setup:client": "ts-node scripts/setup-admin-client.ts",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rardoz/witchly-app-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rardoz/witchly-app-api/issues"
  },
  "homepage": "https://github.com/rardoz/witchly-app-api#readme",
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.2",
    "bcrypt": "^6.0.0",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "graphql": "^16.11.0",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.0",
    "nodemailer": "^7.0.6",
    "reflect-metadata": "^0.2.2",
    "type-graphql": "^2.0.0-rc.2",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.6.2",
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.15.3",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.ts": [
      "biome format --write",
      "biome check --write"
    ],
    "*.js": [
      "biome format --write",
      "biome check --write"
    ],
    "src/**/*.{json,jsonc}": [
      "biome format --write"
    ],
    "*.config.{json,jsonc}": [
      "biome format --write"
    ],
    "tsconfig*.json": [
      "biome format --write"
    ]
  }
}
